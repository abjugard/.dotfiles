#!/usr/bin/env bash
scriptname=`basename $0`
player="mpv"
if [[ -z $1 ]]; then
    echo "$scriptname: View $scriptname stream in $player"
    echo ""
    echo "Usage:"
    echo "   $scriptname <stream>"
    echo "   $scriptname <stream> -q -- list available quality levels for stream"
    echo "   $scriptname <stream> <quality>"
    exit
fi

if [[ $# -lt 1 ]]; then
    echo Please specify at least 1 argument
    exit 0
fi

if [[ $# -eq 1 ]]; then
    stream="$1"
    quality="best"
fi
if [[ $# -eq 2 ]]; then
    stream="$1"
    quality="$2"

    if [[ $quality == "-q" ]]; then
        quality=""
    fi
fi

livestreamer -p $player http://www.twitch.tv/$stream $quality
